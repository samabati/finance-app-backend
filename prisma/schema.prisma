generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  budgets Budget[]
  pots    Pot[]

  @@map("users")
}

model Budget {
  id        Int      @id @default(autoincrement())
  category  String
  spent     Int      @default(0)
  max       Int
  theme     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("budgets")
}

model Pot {
  id        Int      @id @default(autoincrement())
  name      String
  saved     Int      @default(0)
  target    Int
  theme     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pots")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  avatar    String
  name      String
  category  String
  date      DateTime
  amount    Decimal  @db.Decimal(10, 2)
  recurring Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("transactions")
}
